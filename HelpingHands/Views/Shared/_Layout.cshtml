<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helping Hands</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class ="@ViewData["BodyClass"]">
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/1(1)_resize.png" class="navbar-logo" alt="Helping Hands Logo" style="height: 50px;" />
                Helping Hands
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/FAQ">FAQ</a></li>
                </ul>
                <ul class="navbar-nav">
                    @if (UserSession.IsLoggedIn)
                    {
                        if (UserSession.Role == "Admin")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Admin Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Task/Assign">Assign Tasks</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Event/Manage">Manage Events</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/GenerateReports">Generate Reports</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/ViewDonations">View Donations</a></li>
                        }
                        else if (UserSession.Role == "Beneficiary")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Beneficiary/Dashboard">My Dashboard</a></li>
                        }
                        else if (UserSession.Role == "Volunteer")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Volunteer/Dashboard">My Tasks</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                    }
                    else
                    {
                        
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                    }

                </ul>
            </div>
        </div>
    </header>
    <main class="container mt-4">
        @RenderBody()
    </main>
    <footer class="custom-footer">
        <p>&copy; 2024 Helping Hands. All rights reserved.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
