@model HelpingHands.Models.BeneficiaryViewModel

@{
    ViewData["Title"] = "Beneficiary Registration";
    ViewData["BodyClass"] = "about-background";
}

<h2>Register as Beneficiary</h2>
<form asp-action="Register" method="post">
    <div class="content-box">
        <label for="Name">Full Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="content-box">
        <label for="ContactNumber">Contact Number:</label>
        <input asp-for="ContactNumber" class="form-control" />
    </div>
    <div class="content-box">
        <label for="Email">Email Address:</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="content-box">
        <label for="ResourceNeeds">Resource Needs:</label>
        <textarea asp-for="ResourceNeeds" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>
